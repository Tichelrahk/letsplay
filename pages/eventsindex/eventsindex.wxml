<cu-custom bgColor="bg-black" isCustom="{{true}}">
  <view slot="content">Let's Play!</view>
</cu-custom>
 
<!-- Swiper card ends -->
<view >
<text class="play">Let's Play</text>
<swiper class="screen-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
  <swiper-item wx:for="{{swiperList}}" wx:key style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.2)),url({{item.url}}); background-size: cover; display:flex; align-items: center" mode="aspectFill">
  
  </swiper-item>
</swiper>
</view>

<!-- Swiper card ends -->
<!-- SEARCH BAR -->
<view class="cu-bar dark lighter">
  <view class="search-form round">
    <view class="cuIcon-search"></view>
    <input type="text" placeholder="Search for a name, sport or location" confirm-type="search" bindinput="searchAPICall"></input>
  </view>
  <view class="action">
    <view class=" btn_red " bindinput="searchAPICall">Search</view>
  </view>
</view>

<!-- CARDS SECTION -->
<view wx:for="{{events}}" wx:key wx:for-item="event" class="dark">
  <view class=" menu card-menu sm-border margin-top" bindtap="goToEventsShow" data-id="{{event.id}}">

<!-- CARD TITLE -->
    <!-- <view class="item">
      <view class="flex">
        <view class="cuIcon-activity bluev1"></view>
        <view class="text-bold text-cut padding-left">{{event.name}}</view>
      </view>
      <view class="action">
        <view class="text-bold">{{event.attendees}}/{{event.slots}}</view>  
      </view>
    </view>
    {{event.image}} -->

<!-- CARD INFO -->


    <view class=" card-info" style="background-image: linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,0.3)),url({{event.image}}); background-size: cover">
      <view class="item">
        <view class="flex">
          <view class="cuIcon-activity text-flag flag"></view>
            <view class="text-head set_width">
              {{event.name}}
            </view>
        </view>
        <view class="action scope-info">
          <view class="cuIcon-friend people"></view>
          <view class=" text-scope">{{event.attendees}}/{{event.slots}}</view>  
        </view>
      </view>

      <view class="content flex padding-top padding-bottom">
        <view class="mc-content card-content"> 
          <!-- <view>
            <view>{{event.date}}</view>
            <view>{{event.start}}-{{event.end}}</view>
          </view>
          <view class="cu-item">Location: {{event.location.address}}</view> -->
        </view>
      </view>
    </view>

<!-- CARD TAGS -->
    <view class="item-down tags">
      <view class="content">
        <view>
          <view class="info">{{event.date}}</view>
          <view class="info">{{event.start}}-{{event.end}}</view>
        </view>
          <view class="info">Location: {{event.location.address}}</view>
        <view>
          <view class="cu-tag bg-red light round">Jing An District</view>
          <view wx:for="{{event.tags}}" wx:key wx:for-item="tag" class="cu-tag bg-green light round">{{tag}}</view>
        </view>
      </view>
      <!-- <view class="cu-tag bg-red light round">Jing An District</view> -->
      <view class=" cuIcon-right"></view>
    </view>
  </view>
</view>

