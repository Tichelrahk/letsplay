.btn_red{
  background-color: #1e8bff;
  color: var(--white);
  padding: 5px;
  border-radius: 17px;
  width: 74px;
  text-align: center;
}

bg_red{
  background-color:rgb(180, 3, 3);
}


.card-img-big {
  width: 100%;
  height: 200rpx;
  flex-shrink: 0;
  object-fit: cover;
}

.card {
  color: white;
}

.bg-transparent {
  background: transparent;
}

.card-content {
  display: flex;
  flex-direction: column;
  align-content: left;
 }

.card-info{
  overflow: hidden;
  height: 200px;
  margin-top: 21px;
}

.text-head{
  font-weight: bold;
  padding-left: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 19px;
  text-shadow: 1px 1px 20px rgba(0,0,0,1);
}

.text-scope{
  font-size: 15px;
}

.info{
  font-weight: lighter;
  font-size: 15px;
  width: 286px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.flag{
  font-size: 19px;
}

.ligher{
  font-weight: lighter;
}

.people{
  font-size: 17px;
}

.scope-info{
  display: flex;
  align-items: center;
}

.set_width{
  width: 289px;
}

.flexing{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx 10rpx 50rpx;
}

.tag{
  margin: 10px 8px;
  border-radius: 9px;
}

.icon_right{
  font-size: 13px;
  margin-top: 48px;
}

.tag_swiper{
  overflow: scroll;
  width: 100vw !important;
  flex-wrap: nowrap;
  display: flex;
  margin-left: 25px;
}