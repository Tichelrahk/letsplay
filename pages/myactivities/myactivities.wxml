<!--pages/eventshow/eventshow.wxml-->
<view class="container">

<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">Attending</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">Organizing</view>  
</view>  
  
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
    <swiper-item>  
      <!-- attending cards start -->
       <view class="weui-panel__bd">
      <!-- Panel Body Start -->
        <view wx:for="{{events}}" wx:for-item="event">     
          <view bindtap="goToEventsShow" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" data-id="{{event.id}}">
          </view>
           
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb" src="{{event.image}}" />
            </view>
            
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                
                <view class="weui-media-box__title">{{event.name}}</view>
                <view class="weui-media-box__desc">
                  <view>{{event.start}}</view>
                  <view>{{event.end}}</view>
                </view>
            </view>

        </view>
      </view>
<!-- cards under attemnding ends here -->
    </swiper-item>  
    
    <swiper-item>  
      <view>HOST</view>  
    </swiper-item>  

</swiper>  
</view>
