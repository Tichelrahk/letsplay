<!--pages/eventshow/eventshow.wxml-->
<cu-custom bgColor="bg-black" isCustom="{{true}}">
  <view slot="content">Let's Play!</view>
</cu-custom>

<view class="container">

<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">Attending</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">Organizing</view>  
</view>  
  
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
    <swiper-item>  
      <!-- attending cards start -->
       <view class="weui-panel__bd">
      <!-- Panel Body Start -->
        <view wx:for="{{events}}" wx:for-item="event">     
          <view bindtap="goToEventsShow" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" data-id="{{event.id}}">
          </view>
           
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb" src="{{event.image}}" />
            </view>
            
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                
                <view class="weui-media-box__title">{{event.name}}</view>
                <view class="weui-media-box__desc">
                  <view>{{event.start}}</view>
                  <view>{{event.end}}</view>
                </view>
            </view>

        </view>
      </view>
<!-- cards under attemnding ends here -->
    </swiper-item>  
    
    <swiper-item>  
      <view>HOST</view>  
    </swiper-item>  

</swiper>  
</view>


<view class="cu-bar tabbar bg-black">
    <view class="action text-gray" bindtap="goToIndex">
      <view class="cuIcon-search"></view> 
      Search
    </view>
    <view class="action text-gray" bindtap="goToBrowse">
      <view class="cuIcon-similar"></view> 
      Browse
    </view>
    <view class="action text-gray add-action" bindtap="goToCreate">
      <button class="cu-btn cuIcon-add bg-green shadow"></button>
      Create
    </view>
    <view class="action text-gray" bindtap="goToMyActivities">
      <view class="cuIcon-cart">
        <view class="cu-tag badge">2</view>
      </view>
      My Activities
    </view>
    <view class="action text-gray" bindtap="goToProfile">
      <view class="cuIcon-my">
        <view class="cu-tag badge"></view>
      </view>
      Profile
    </view>
  </view>