<!--pages/eventshow/eventshow.wxml-->
<cu-custom bgColor="bg-black" isCustom="{{true}}">
  <view slot="content">My Activities</view>
</cu-custom>


<view wx:if ="{{login}}">

<view class="swiper-tab bg-white">  
      <view class="swiper-tab-list {{currentTab==0 ? 'on' : 'off'}}" data-current="0" bindtap="swichNav">Attending</view>  
      <view class="swiper-tab-list {{currentTab==1 ? 'on' : 'off'}}" data-current="1" bindtap="swichNav">Organizing</view> 
</view>  

<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight  - 31}}px" bindchange="bindChange">  

  <swiper-item>  
    <!-- Attending Cards -->
    <view class="weui-panel__bd">

    <!-- Panel Body Start -->
      <view class="emergcard" wx:for="{{user.confirmations}}" wx:for-item="confirmation">     
        <view bindtap="goToEventsShow" class="weui-media-box weui-media-box_appmsg"         hover-class="weui-cell_active" data-id="{{event.id}}">
              <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb" src="{{confirmation.event.image}}" />
              </view>

              <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">       
                  <view class="weui-media-box__title">
                    {{confirmation.event.name}}
                  </view>
                  <view class="weui-media-box__desc">
                    <view>{{confirmation.event.start}}</view>
                    <view>{{confirmation.event.end}}</view>
                  </view>
              </view>
        </view>
    </view>
  </view>
  </swiper-item>  

<!-- attending ends here -->
  
  <swiper-item>  
    <!-- organize starts here -->
    <view class="weui-panel__bd">
     Host
    <!-- Panel Body Start -->
    <view class="emergcard" wx:for="{{user.events}}" wx:for-item="event">     
    <view bindtap="goToEventsShow" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active" data-id="{{event.id}}">
          
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image class="weui-media-box__thumb" src="{{event.image}}" />
            </view>   


            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">     
              <view class="weui-media-box__title">
                {{event.name}}
              </view>      
              <view class="weui-media-box__desc">
                <view>{{event.start}}</view>
                <view>{{event.end}}</view>
              </view>
            </view>
      </view>
    </view>
  </view>  
</swiper-item>  
  <!-- organize host ends here -->
</swiper>  
</view>
<view wx:else>
    <button class="log" open-type="getUserInfo" bindgetuserinfo="getUserInfo">Log in!</button>
</view>

<!-- BOTTOM NAVBAR START -->
<view class="space-6"></view>
<view class="cu-bar tabbar bg-black">
  <view class="action text-gray" bindtap="goToIndex">
    <view class="cuIcon-search"></view> 
    Search
  </view>
  <view class="action text-gray" bindtap="goToBrowse">
    <view class="cuIcon-similar"></view> 
    Browse
  </view>
  <view class="action text-gray add-action" bindtap="goToCreate">
    <view class="cu-btn cuIcon-add bg-green"></view>
    Create
  </view>
  <view class="action text-gray" bindtap="goToMyActivities">
    <view class="cuIcon-activity">
      <view class="cu-tag badge">2</view>
    </view>
    My Activities
  </view>
  <view class="action text-gray" bindtap="goToProfile">
    <view class="cuIcon-my">
      <view class="cu-tag badge"></view>
    </view>
    Profile
  </view>
</view>
<!-- BOTTOM NAVBAR END -->