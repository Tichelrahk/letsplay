<!--pages/usershow/usershow.wxml-->
<cu-custom bgColor="bg-black" isCustom="{{true}}">
  <view slot="content">My Profile</view>
</cu-custom>
  
<view wx:if ="{{login}}">

<!-- BASIC INFORMATION CARD -->

<view class=" padding bg-white solid-bottom text-blue">
  <view class='cuIcon-titles mc-title'>My Basic Information</view> 
</view>

<view class="bg-white flex padding">
<view class="info_profile">
  <view class="cu-avatar xl round" style="background-image:url({{user.profile_picture}});"></view>
  <view class="padding-left text-black">
    <view class="name">Name: <text class="text-bold">{{user.name}}</text></view>
    <view wx:if="{{user.description}}">Bio: {{user.description}}</view>
  </view>
</view>
  <!-- <view bindtap="goToEdit" data-id="{{user.id}}" class="cuIcon-edit edit"></view> -->
</view>


<!-- LOCATION CARD -->

<view class="padding bg-white solid-bottom margin-top text-blue">
  <view class='cuIcon-titles mc-title'>My Location</view> 
</view>
<map id="map" longitude="121.4453" latitude="31.2235" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%;"></map>
<view class="bg-white space-3"></view>

<!-- ACTIVITY SUMMARY CARD -->
