  <view class='cuIcon-titles mc-title'>My Activity Summary</view> 
</view>
<view class="padding bg-white solid-bottom mc-content">Events Attended:</view>
<view class="padding bg-white solid-bottom mc-content">Events Oranised:</view>  
<view class="padding bg-white solid-bottom mc-content">Total Attendees:</view>   -->

<view class="padding bg-white solid-bottom margin-top text-blue">
  <view class='cuIcon-titles mc-title'>My Likes</view> 
</view>

<view class="bg-white space-3"></view>

</view>
<view wx:else>
<view>
<view class="bg-img padding-tb-xl position" style="background-image: url('/images/loginuse.jpg');height: 100vh;">
  <view class="text-white logs">
    <view class="head">
      Lets Play
    </view>
    <view class="head_content">
      Create or Join Fun activities with your friends
    </view>
  </view>
  <button class="log btn-cust btn-login" open-type="getUserInfo" bindgetuserinfo="getUserInfo">Get Started</button>
</view>
</view>
</view>


