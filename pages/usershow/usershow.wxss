/* pages/usershow/usershow.wxss */
.h1{
  text-align: center;
  margin:20px;
}
.banner{
  padding:20px;
  color: #4A4A4A;
  /* text-align: center; */
  height: 100vh;
  background-repeat: no-repeat;
  background-image: url(https://images.unsplash.com/photo-1519750783826-e2420f4d687f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80);
  background-size: cover;
  background-position: center;
  
}
 
.align-center {
  text-align: center;
}

.section{
border-radius: 5px;
margin:20px;
}

.btn-edit {

  color: #4A4A4A;
  border: 2px solid #4A4A4A;
  border-radius: 50px;
  font-weight: heavy;
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.avatar1 {
width: 200rpx;
height: 200rpx;
border-radius: 50%;
margin-bottom: 20rpx;
border: solid rgba(255, 255, 255, 0.11) 1rpx;
box-shadow: 2px 2px 10rpx 0px rgba(10, 10, 10, .4);

}

.flex-box{
  display: flex;
  width:100%;
  align-items: right;
}

.name{
  font-weight: lighter;
  font-size: 18px;
}

